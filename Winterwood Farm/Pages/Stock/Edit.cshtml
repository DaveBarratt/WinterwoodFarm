            </div>
            <div class="form-group">
                <label asp-for="StockModel.Variety" class="control-label"></label>
                <input asp-for="StockModel.Variety" class="form-control" />
                <span asp-validation-for="StockModel.Variety" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockModel.Quantity" class="control-label"></label>
                <input asp-for="StockModel.Quantity" class="form-control" />
                <span asp-validation-for="StockModel.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
