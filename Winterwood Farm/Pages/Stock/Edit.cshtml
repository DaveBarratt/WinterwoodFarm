@model Winterwood_Farm.Pages.Stock.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockModel.StockModelId" />
            <div class="form-group">
                <label asp-for="StockModel.Fruit" class="control-label"></label>
                <input asp-for="StockModel.Fruit" class="form-control" />
