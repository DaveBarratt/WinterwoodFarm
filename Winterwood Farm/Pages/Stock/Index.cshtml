@page
@model Winterwood_Farm.Pages.Stock.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Stock</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockModel[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockModel[0].Fruit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockModel[0].Variety)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockModel[0].Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StockModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fruit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Variety)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
